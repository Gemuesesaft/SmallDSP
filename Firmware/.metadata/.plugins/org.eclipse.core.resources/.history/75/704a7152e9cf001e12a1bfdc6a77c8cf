*/

#ifdef __cplusplus
	extern "C" {
#endif

/** @addtogroup IC_Drivers
  * @{
  */

/** @addtogroup Audio_Codec
  * @{
  */

#ifndef IC_DRIVERS_INC_AK4619_H_
#define IC_DRIVERS_INC_AK4619_H_

#include <stdint.h>

typedef enum {
	ak4619_I2C,
	ak4619_SPI
}ak4619_MCUInterface_t;

typedef enum {
	ak4619_A0_GND,
	ak4619_A0_Vdd
}ak4619_A0_t;

typedef struct {
	ak4619_MCUInterface_t mcuInterface;
	I2C_HandleTypeDef *hi2c;
	SPI_HandleTypeDef *hspi;
	ak4619_A0_t a0;
	ak4619_NCSPin_t NCSPin;
}ak4619_InterfaceConfig_t;

void AK4619_Init(void);

uint8_t AK4619_();

/**
* @}
*/

/**
* @}
*/

#ifdef __cplusplus
	}
#endif

#endif /* IC_DRIVERS_INC_AK4619_H_ */
